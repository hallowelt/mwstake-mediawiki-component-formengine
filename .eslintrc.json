{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"parserOptions": {
		"sourceType": "commonjs",
		"ecmaVersion": 2020
	},
	"globals": {
		"jQuery": "readonly",
		"mediaWiki": "readonly",
		"OOJSPlus": "readonly"
	},
	"rules": {
		"camelcase": "off",
		"es-x/no-object-values": "off",
		"es-x/no-optional-chaining": "off",
		"max-len": "off",
		"no-jquery/no-class-state": "off",
		"no-jquery/no-global-selector": "off",
		"no-prototype-builtins": "off",
		"no-underscore-dangle": "off",
		"no-unused-vars": "off"
	}
}
